@page "/multiplayer"
@using PoFunQuiz.Client.Services
@using PoFunQuiz.Shared.DTOs
@inject GameClientService GameService
@inject NavigationManager Navigation
@implements IDisposable

<PageTitle>Multiplayer - PoFunQuiz</PageTitle>

<SectionContent SectionName="HeaderContent">
    <div class="d-flex align-items-center">
        <span class="material-icons me-2" style="font-size: 1.2rem;">people</span>
        <span class="app-title">Multiplayer</span>
    </div>
</SectionContent>

<div class="container mt-4">
    <h1 class="text-center mb-4">ðŸŽ® Multiplayer Arena</h1>

    @if (currentState == null)
    {
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h3 class="card-title text-center">Join or Create</h3>
                        
                        <div class="mb-3">
                            <label class="form-label">Your Name</label>
                            <input type="text" class="form-control" @bind="playerName" placeholder="Enter your name" />
                        </div>

                        <div class="d-grid gap-2">
                            <button class="btn btn-primary btn-lg" @onclick="CreateGame" disabled="@string.IsNullOrWhiteSpace(playerName)">
                                Create New Game
                            </button>
                            
                            <div class="input-group mt-3">
                                <input type="text" class="form-control" @bind="gameIdToJoin" placeholder="Enter Game ID" />
                                <button class="btn btn-outline-secondary" @onclick="JoinGame" disabled="@(string.IsNullOrWhiteSpace(playerName) || string.IsNullOrWhiteSpace(gameIdToJoin))">
                                    Join Game
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-12 text-center mb-4">
                <h2>Game ID: <span class="badge bg-info">@currentState.GameId</span></h2>
                <p class="text-muted">Share this ID with your friend!</p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-5">
                <div class="card border-primary mb-3">
                    <div class="card-header bg-primary text-white">Player 1</div>
                    <div class="card-body text-center">
                        <h4>@currentState.Player1Name</h4>
                        <h1 class="display-4">@currentState.Player1Score</h1>
                    </div>
                </div>
            </div>
            
            <div class="col-md-2 d-flex align-items-center justify-content-center">
                <h1>VS</h1>
            </div>

            <div class="col-md-5">
                <div class="card border-danger mb-3">
                    <div class="card-header bg-danger text-white">Player 2</div>
                    <div class="card-body text-center">
                        <h4>@currentState.Player2Name</h4>
                        <h1 class="display-4">@currentState.Player2Score</h1>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center mt-4">
            @if (!currentState.IsGameStarted)
            {
                @if (isHost && currentState.Player2Name != "Waiting...")
                {
                    <button class="btn btn-success btn-lg px-5" @onclick="StartGame">Start Game</button>
                }
                else if (currentState.Player2Name == "Waiting...")
                {
                    <div class="alert alert-warning">Waiting for Player 2 to join...</div>
                }
                else
                {
                    <div class="alert alert-info">Waiting for host to start...</div>
                }
            }
            else
            {
                <div class="alert alert-success">Game in Progress! (Simulation Mode)</div>
                <button class="btn btn-outline-primary" @onclick="SimulateScore">Simulate Score (+10)</button>
            }
        </div>
    }
</div>

@code {
    private string playerName = string.Empty;
    private string gameIdToJoin = string.Empty;
    private GameStateDto? currentState;
    private bool isHost = false;

    protected override async Task OnInitializedAsync()
    {
        await GameService.InitializeAsync();
        GameService.OnGameUpdated += UpdateState;
        GameService.OnPlayerJoined += (name) => StateHasChanged();
        GameService.OnGameStarted += UpdateState;
        GameService.OnScoreUpdated += UpdateState;
    }

    private void UpdateState(GameStateDto state)
    {
        currentState = state;
        StateHasChanged();
    }

    private async Task CreateGame()
    {
        var gameId = await GameService.CreateGameAsync(playerName);
        isHost = true;
        currentState = new GameStateDto
        {
            GameId = gameId,
            Player1Name = playerName,
            Player2Name = "Waiting...",
            Player1Score = 0,
            Player2Score = 0
        };
    }

    private async Task JoinGame()
    {
        var success = await GameService.JoinGameAsync(gameIdToJoin, playerName);
        if (success)
        {
            isHost = false;
            // State will be updated via SignalR callback
        }
        else
        {
            // Handle error
        }
    }

    private async Task StartGame()
    {
        if (currentState != null)
        {
            await GameService.StartGameAsync(currentState.GameId);
        }
    }

    private async Task SimulateScore()
    {
        if (currentState != null)
        {
            var playerNum = isHost ? 1 : 2;
            var currentScore = isHost ? currentState.Player1Score : currentState.Player2Score;
            await GameService.UpdateScoreAsync(currentState.GameId, playerNum, currentScore + 10);
        }
    }

    public void Dispose()
    {
        GameService.OnGameUpdated -= UpdateState;
        GameService.OnGameStarted -= UpdateState;
        GameService.OnScoreUpdated -= UpdateState;
    }
}
