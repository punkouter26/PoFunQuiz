@code {
    private string playerName = string.Empty;
    private string gameIdToJoin = string.Empty;
    private string activeTab = "create";
    private GameStateDto? currentState;
    private bool isHost = false;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await GameService.InitializeAsync();
        GameService.OnGameUpdated += UpdateState;
        GameService.OnPlayerJoined += (_) => InvokeAsync(StateHasChanged);
        GameService.OnGameStarted += UpdateState;
        GameService.OnScoreUpdated += UpdateState;
    }

    private void UpdateState(GameStateDto state)
    {
        InvokeAsync(() =>
        {
            currentState = state;
            StateHasChanged();
        });
    }

    private async Task CreateGame()
    {
        errorMessage = null;
        var gameId = await GameService.CreateGameAsync(playerName);
        if (string.IsNullOrEmpty(gameId))
        {
            errorMessage = "Failed to create game. Please try again.";
            return;
        }
        isHost = true;
        currentState = new GameStateDto
        {
            GameId = gameId,
            Player1Name = playerName,
            Player2Name = "Waiting...",
            Player1Score = 0,
            Player2Score = 0
        };
    }

    private async Task JoinGame()
    {
        errorMessage = null;
        var result = await GameService.JoinGameAsync(gameIdToJoin, playerName);
        if (result.Success)
        {
            isHost = false;
        }
        else
        {
            errorMessage = result.FailReason switch
            {
                "already_started" => "That game has already started. You can't join mid-game.",
                "already_full"    => "That game already has two players.",
                _                 => $"Game \"{gameIdToJoin.ToUpperInvariant()}\" not found. Check the ID and try again."
            };
        }
    }

    private async Task StartGame()
    {
        if (currentState != null)
        {
            await GameService.StartGameAsync(currentState.GameId);
        }
    }

    private async Task SimulateScore()
    {
        if (currentState != null)
        {
            var playerNum = isHost ? 1 : 2;
            var currentScore = isHost ? currentState.Player1Score : currentState.Player2Score;
            await GameService.UpdateScoreAsync(currentState.GameId, playerNum, currentScore + 10);
        }
    }

    private static string SafeInitials(string? name) =>
        string.IsNullOrWhiteSpace(name) ? "?" : name[..Math.Min(2, name.Length)].ToUpperInvariant();

    public void Dispose()
    {
        GameService.OnGameUpdated -= UpdateState;
        GameService.OnGameStarted -= UpdateState;
        GameService.OnScoreUpdated -= UpdateState;
    }
}
