@page "/gamesetup"
@using PoFunQuiz.Web
@using PoFunQuiz.Web.Models
@using PoFunQuiz.Web.Features.Quiz
@using Radzen
@using Radzen.Blazor
@inject NavigationManager Navigation
@inject GameState GameState
@inject IOpenAIService OpenAIService
@inject ILogger<GameSetup> Logger
@rendermode InteractiveServer

<PageTitle>PoFunQuiz - Game Setup</PageTitle>

<div class="setup-page">
    @if (IsLoading)
    {
        <div class="setup-loading">
            <div class="setup-spinner-wrap">
                <span class="material-icons setup-spinner-icon">auto_awesome</span>
            </div>
            <h2 class="setup-loading-title">Generating Questionsâ€¦</h2>
            <p class="setup-loading-sub">Hang tight while we craft your quiz!</p>
            <RadzenProgressBar Value="100" ShowValue="false" Mode="ProgressBarMode.Indeterminate"
                               Style="width: 200px; height: 5px; border-radius: 999px;" class="rz-mb-4" />
            <div class="setup-skeleton-boards">
                <div class="setup-skeleton-board"></div>
                <div class="setup-skeleton-board"></div>
            </div>
        </div>
    }
    else if (ErrorMessage != null)
    {
        <div class="setup-error-card">
            <div class="setup-error-icon-wrap">
                <span class="material-icons setup-error-icon">sentiment_dissatisfied</span>
            </div>
            <h2 class="setup-error-title">Oops, something went wrong</h2>
            <p class="setup-error-msg">@ErrorMessage</p>
            <div class="setup-error-actions">
                <button class="setup-btn setup-btn-secondary" @onclick="@(() => Navigation.NavigateTo("/"))">
                    <span class="material-icons">home</span>
                    Main Menu
                </button>
                <button class="setup-btn setup-btn-primary" @onclick="RetrySetup">
                    <span class="material-icons">refresh</span>
                    Try Again
                </button>
            </div>
        </div>
    }
</div>

<style>
    .setup-page {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 80vh;
        padding: 1rem;
        padding-bottom: 90px;
        text-align: center;
    }

    /* Loading state */
    .setup-loading {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.75rem;
    }

    .setup-spinner-wrap {
        width: 72px;
        height: 72px;
        background: linear-gradient(135deg, var(--primary-color, #6366f1), var(--primary-light, #818cf8));
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        animation: spinnerPulse 2s ease-in-out infinite;
        margin-bottom: 0.5rem;
        box-shadow: 0 0 0 0 rgba(99,102,241,0.4);
    }

    @@keyframes spinnerPulse {
        0%   { box-shadow: 0 0 0 0 rgba(99,102,241,0.45); }
        70%  { box-shadow: 0 0 0 16px rgba(99,102,241,0); }
        100% { box-shadow: 0 0 0 0 rgba(99,102,241,0); }
    }

    .setup-spinner-icon {
        font-size: 2rem;
        color: white;
        animation: spin 3s linear infinite;
    }

    @@keyframes spin {
        from { transform: rotate(0deg); }
        to   { transform: rotate(360deg); }
    }

    .setup-loading-title {
        font-size: var(--text-xl, 1.25rem);
        font-weight: 800;
        color: white;
        margin: 0;
    }

    .setup-loading-sub {
        color: rgba(255,255,255,0.75);
        font-size: var(--text-sm, 0.875rem);
        margin: 0 0 0.5rem;
    }

    .setup-skeleton-boards {
        display: flex;
        gap: 1rem;
        margin-top: 1rem;
    }

    .setup-skeleton-board {
        width: 260px;
        height: 360px;
        background: rgba(255,255,255,0.12);
        border-radius: 20px;
        animation: skeletonShimmer 1.5s ease-in-out infinite alternate;
    }

    .setup-skeleton-board:last-child { animation-delay: 0.4s; }

    @@keyframes skeletonShimmer {
        from { opacity: 0.5; }
        to   { opacity: 0.85; }
    }

    /* Error state */
    .setup-error-card {
        background: rgba(255,255,255,0.95);
        backdrop-filter: blur(20px);
        border-radius: 24px;
        padding: 2.5rem 2rem 2rem;
        max-width: 400px;
        width: 100%;
        box-shadow: 0 20px 50px rgba(0,0,0,0.18);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.6rem;
    }

    .setup-error-icon-wrap {
        width: 68px;
        height: 68px;
        background: linear-gradient(135deg, #fee2e2, #fecaca);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 0.25rem;
    }

    .setup-error-icon {
        font-size: 2.25rem;
        color: var(--danger-color, #ef4444);
    }

    .setup-error-title {
        font-size: var(--text-xl, 1.25rem);
        font-weight: 900;
        color: var(--text-primary, #1e293b);
        margin: 0;
    }

    .setup-error-msg {
        font-size: var(--text-sm, 0.875rem);
        color: var(--text-secondary, #64748b);
        margin: 0 0 0.5rem;
        max-width: 300px;
        line-height: 1.5;
    }

    .setup-error-actions {
        display: flex;
        gap: 0.75rem;
        width: 100%;
        margin-top: 0.5rem;
    }

    .setup-btn {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.4rem;
        padding: 0.8rem 1rem;
        border: none;
        border-radius: var(--radius-input, 12px);
        font-size: var(--text-sm, 0.875rem);
        font-weight: 700;
        cursor: pointer;
        transition: transform 0.15s, box-shadow 0.15s;
    }

    .setup-btn-primary {
        background: var(--primary-color, #6366f1);
        color: white;
        box-shadow: var(--shadow-md);
    }

    .setup-btn-primary:hover { transform: translateY(-1px); box-shadow: var(--shadow-lg); }
    .setup-btn-primary:active { transform: scale(0.98); }

    .setup-btn-secondary {
        background: var(--surface-alt, #f1f5f9);
        color: var(--text-primary, #1e293b);
    }

    .setup-btn-secondary:hover { background: var(--border-color, #e2e8f0); }

    @@media (max-width: 480px) {
        .setup-skeleton-boards { display: none; }
        .setup-error-card { padding: 2rem 1.25rem 1.5rem; border-radius: 20px; }
    }
</style>

@code {
    [SupplyParameterFromQuery(Name = "player1")]
    public string? Player1Initials { get; set; }

    [SupplyParameterFromQuery(Name = "player2")]
    public string? Player2Initials { get; set; }

    [SupplyParameterFromQuery]
    public string? Topic { get; set; }

    private bool IsLoading { get; set; } = true;
    private string? ErrorMessage { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (string.IsNullOrWhiteSpace(Player1Initials) || string.IsNullOrWhiteSpace(Player2Initials) || string.IsNullOrWhiteSpace(Topic))
        {
            Navigation.NavigateTo("/");
            return;
        }

        GameState.SetGame(new GameSession
        {
            Player1 = new Player { Initials = Player1Initials },
            Player2 = new Player { Initials = Player2Initials },
            SelectedCategories = [Topic]
        });

        await GenerateQuestionsAsync();
    }

    private async Task RetrySetup()
    {
        ErrorMessage = null;
        IsLoading = true;
        await GenerateQuestionsAsync();
    }

    private async Task GenerateQuestionsAsync()
    {
        try
        {
            IsLoading = true;
            StateHasChanged();

            if (GameState.CurrentGame == null)
            {
                ErrorMessage = "Game state lost. Please return to the main menu.";
                IsLoading = false;
                return;
            }

            var topic = GameState.CurrentGame.SelectedCategories?.FirstOrDefault() ?? "general knowledge";
            Logger.LogDebug("Generating questions for topic: {Topic}", topic);

            var sharedQuestions = await OpenAIService.GenerateQuizQuestionsAsync(topic, 5);
            Logger.LogDebug("Generated {Count} shared questions", sharedQuestions?.Count ?? 0);

            if (sharedQuestions == null || sharedQuestions.Count == 0)
            {
                ErrorMessage = "Failed to generate questions. Please try again.";
                IsLoading = false;
                return;
            }

            // Assign the SAME questions to both players for fairness
            GameState.CurrentGame.Player1Questions = sharedQuestions;
            GameState.CurrentGame.Player2Questions = sharedQuestions;
            GameState.CurrentGame.StartTime = DateTime.UtcNow;

            Navigation.NavigateTo("/game-board");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error generating quiz questions");
            ErrorMessage = $"An error occurred: {ex.Message}";
            IsLoading = false;
        }
    }
}
