@page "/diag"
@using PoFunQuiz.Core.Services
@using PoFunQuiz.Infrastructure.Storage
@using Azure.Data.Tables
@using PoFunQuiz.Core.Configuration
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@inject IConfigurationService ConfigurationService
@inject ILogger<Diag> Logger
@inject IQuestionGeneratorService QuestionGenerator
@inject NavigationManager NavigationManager
@inject OpenAIEndpointTester EndpointTester

<PageTitle>PoFunQuiz - Diagnostics</PageTitle>

<div class="container mt-4">
    <h1 class="mb-4">System Diagnostics</h1>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-4">
        @foreach (var check in _diagnosticChecks)
        {
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            @if (!check.IsChecked)
                            {
                                <div class="spinner-border spinner-border-sm me-2" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                            }
                            else
                            {
                                @if (check.IsSuccess)
                                {
                                    <span class="text-success me-2">✅</span>
                                }
                                else
                                {
                                    <span class="text-danger me-2">❌</span>
                                }
                            }
                            <h5 class="card-title mb-0">@check.Name</h5>
                        </div>
                        @if (check.IsChecked && !string.IsNullOrEmpty(check.Message))
                        {
                            <p class="card-text mt-2 @(check.IsSuccess ? "text-success" : "text-danger")">
                                @check.Message
                            </p>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    <hr class="my-4" />

    <div class="d-flex gap-2">
        <button class="btn btn-primary" @onclick="RunDiagnostics" disabled="@_isRunning">
            Run Diagnostics Again
        </button>

        <button class="btn btn-outline-secondary" @onclick="@(() => NavigationManager.NavigateTo("/"))">
            Back to Home
        </button>
    </div>
</div>

@code {
    private bool _isRunning;
    private List<DiagnosticCheck> _diagnosticChecks = new();

    protected override async Task OnInitializedAsync()
    {
        InitializeDiagnosticChecks();
        await RunDiagnostics();
    }

    private void InitializeDiagnosticChecks()
    {
        _diagnosticChecks = new List<DiagnosticCheck>
        {
            new() { Name = "Azure Table Storage Connection" },
            new() { Name = "OpenAI Service Connection" },
            new() { Name = "OpenAI Endpoint Validation" },
            new() { Name = "Application Configuration" },
            new() { Name = "Question Generation Service" },
            new() { Name = "OpenAI Config Details Test" }
        };
    }

    private async Task RunDiagnostics()
    {
        try
        {
            _isRunning = true;
            Logger.LogInformation("Starting diagnostics check");

            foreach (var check in _diagnosticChecks)
            {
                check.Reset();
                StateHasChanged();
            }

            // Check Azure Table Storage
            await CheckTableStorage();

            // Check OpenAI Service
            await CheckOpenAIService();

            // Check OpenAI Endpoint
            await CheckOpenAIEndpoint();

            // Check Application Configuration
            CheckConfiguration();

            // Check Question Generation
            await CheckQuestionGeneration();

            // Check OpenAI Config Details
            CheckOpenAIConfigDetails();

            Logger.LogInformation("Diagnostics check completed successfully");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error during diagnostics check");
        }
        finally
        {
            _isRunning = false;
        }
    }

    private async Task CheckTableStorage()
    {
        var check = _diagnosticChecks.First(c => c.Name == "Azure Table Storage Connection");
        try
        {
            var connectionString = Configuration.GetConnectionString("TableStorage");
            if (string.IsNullOrEmpty(connectionString))
            {
                throw new Exception("Table Storage connection string is not configured");
            }

            var tableClient = new TableClient(connectionString, "GameSessions");
            await tableClient.CreateIfNotExistsAsync();

            check.SetSuccess("Successfully connected to Azure Table Storage");
            Logger.LogInformation("Table Storage check passed");
        }
        catch (Exception ex)
        {
            check.SetFailure($"Failed to connect: {ex.Message}");
            Logger.LogError(ex, "Table Storage check failed");
        }
    }

    private async Task CheckOpenAIService()
    {
        var check = _diagnosticChecks.First(c => c.Name == "OpenAI Service Connection");
        try
        {
            // Try to generate a single test question
            var questions = await QuestionGenerator.GenerateQuestionsAsync(1);
            if (questions != null && questions.Any())
            {
                check.SetSuccess("Successfully connected to OpenAI service");
                Logger.LogInformation("OpenAI service check passed");
            }
            else
            {
                throw new Exception("No questions were generated");
            }
        }
        catch (Exception ex)
        {
            check.SetFailure($"Failed to connect: {ex.Message}");
            Logger.LogError(ex, "OpenAI service check failed");
        }
    }

    private async Task CheckOpenAIEndpoint()
    {
        var check = _diagnosticChecks.First(c => c.Name == "OpenAI Endpoint Validation");
        try
        {
            var configEndpoint = ConfigurationService.OpenAI.Endpoint;
            var configApiKey = ConfigurationService.OpenAI.ApiKey;
            var configDeployment = ConfigurationService.OpenAI.DeploymentName;
            
            Logger.LogInformation("Validating OpenAI endpoint configuration: {Endpoint}, Deployment: {Deployment}", 
                configEndpoint, configDeployment);
            
            // Check if the configuration contains the old problematic endpoint
            if (configEndpoint.Contains("povicoai.openai.azure.com"))
            {
                throw new Exception("Using problematic endpoint: povicoai.openai.azure.com. This host does not exist. " +
                                    "Update to regional endpoint: https://eastus.api.cognitive.microsoft.com/");
            }
            
            // Get the actual endpoint from secrets.json
            var rawEndpoint = Configuration["OpenAI:Endpoint"];
            if (rawEndpoint != configEndpoint)
            {
                throw new Exception($"Configuration mismatch. Raw endpoint from Configuration: {rawEndpoint}, " +
                                    $"but ConfigurationService reports: {configEndpoint}");
            }
            
            // Try basic domain resolution to validate endpoint
            try
            {
                var uri = new Uri(configEndpoint);
                var hostEntry = System.Net.Dns.GetHostEntry(uri.Host);
                Logger.LogInformation("Validated host DNS resolution for {Host}", uri.Host);
            }
            catch (System.Net.Sockets.SocketException ex)
            {
                throw new Exception($"DNS resolution failed for {configEndpoint}. Error: {ex.Message}");
            }
            
            // Use our endpoint tester to verify how the SDK processes the endpoint
            string testResult = await EndpointTester.TestEndpointHandling(configEndpoint, configApiKey, configDeployment);
            
            check.SetSuccess($"Endpoint validation passed. SDK Test Results:\n\n{testResult}");
            Logger.LogInformation("OpenAI endpoint validation passed");
        }
        catch (Exception ex)
        {
            check.SetFailure($"Endpoint validation failed: {ex.Message}");
            Logger.LogError(ex, "OpenAI endpoint validation failed");
        }
    }

    private void CheckConfiguration()
    {
        var check = _diagnosticChecks.First(c => c.Name == "Application Configuration");
        try
        {
            var missingSettings = new List<string>();

            // Check Table Storage Connection String (using IConfiguration for consistency with CheckTableStorage)
            if (string.IsNullOrEmpty(Configuration.GetConnectionString("TableStorage")))
            {
                missingSettings.Add("ConnectionStrings:TableStorage");
            }

            // Check OpenAI Settings using IConfigurationService
            var openAISettings = ConfigurationService.OpenAI;
            if (string.IsNullOrEmpty(openAISettings.Endpoint))
            {
                missingSettings.Add("OpenAI:Endpoint");
            }
            if (string.IsNullOrEmpty(openAISettings.ApiKey))
            {
                // Use the correct name for the missing setting to match what's in secrets.json
                missingSettings.Add("OpenAI:ApiKey");
            }
            if (string.IsNullOrEmpty(openAISettings.DeploymentName))
            {
                missingSettings.Add("OpenAI:DeploymentName");
            }

            if (missingSettings.Any())
            {
                throw new Exception($"Missing required settings: {string.Join(", ", missingSettings)}");
            }

            check.SetSuccess("All required configuration settings are present");
            Logger.LogInformation("Configuration check passed");
        }
        catch (Exception ex)
        {
            check.SetFailure($"Configuration check failed: {ex.Message}");
            Logger.LogError(ex, "Configuration check failed");
        }
    }

    private async Task CheckQuestionGeneration()
    {
        var check = _diagnosticChecks.First(c => c.Name == "Question Generation Service");
        try
        {
            var questions = await QuestionGenerator.GenerateQuestionsAsync(1);
            if (questions != null && questions.Any())
            {
                check.SetSuccess($"Successfully generated {questions.Count} question(s)");
                Logger.LogInformation("Question generation check passed");
            }
            else
            {
                throw new Exception("No questions were generated");
            }
        }
        catch (Exception ex)
        {
            check.SetFailure($"Failed to generate questions: {ex.Message}");
            Logger.LogError(ex, "Question generation check failed");
        }
    }

    private void CheckOpenAIConfigDetails()
    {
        var check = _diagnosticChecks.First(c => c.Name == "OpenAI Config Details Test");
        try
        {
            var rawEndpoint = Configuration["OpenAI:Endpoint"];
            var rawApiKey = Configuration["OpenAI:ApiKey"];
            var rawDeploymentName = Configuration["OpenAI:DeploymentName"];
            
            var openAISettings = ConfigurationService.OpenAI;
            
            var message = new System.Text.StringBuilder();
            message.AppendLine("Raw Configuration:");
            message.AppendLine($"- Endpoint: {rawEndpoint}");
            message.AppendLine($"- ApiKey: {(string.IsNullOrEmpty(rawApiKey) ? "Not Set" : "Set (Hidden)")}");
            message.AppendLine($"- DeploymentName: {rawDeploymentName}");
            message.AppendLine();
            message.AppendLine("ConfigurationService Values:");
            message.AppendLine($"- Endpoint: {openAISettings.Endpoint}");
            message.AppendLine($"- ApiKey: {(string.IsNullOrEmpty(openAISettings.ApiKey) ? "Not Set" : "Set (Hidden)")}");
            message.AppendLine($"- DeploymentName: {openAISettings.DeploymentName}");
            message.AppendLine($"- ModelName: {openAISettings.ModelName}");
            
            // Check if basic configuration is missing
            if (string.IsNullOrEmpty(openAISettings.Endpoint) || 
                string.IsNullOrEmpty(openAISettings.ApiKey) || 
                string.IsNullOrEmpty(openAISettings.DeploymentName))
            {
                throw new Exception("OpenAI configuration details are incomplete. See details below.\n\n" + message.ToString());
            }
            
            // Hardcoded check for problematic endpoint (just for testing)
            // If this endpoint is in the configuration, fail the test regardless of DNS
            if (openAISettings.Endpoint.Contains("povicoai.openai.azure.com"))
            {
                throw new Exception("OpenAI endpoint contains problematic domain 'povicoai.openai.azure.com' which is known to cause issues.");
            }
            
            // DNS resolution check - without complex logic
            // Just try to resolve the hostname for the configured endpoint
            try {
                var uri = new Uri(openAISettings.Endpoint);
                message.AppendLine();
                message.AppendLine($"DNS Resolution for {uri.Host}:");
                try {
                    var hostEntry = System.Net.Dns.GetHostEntry(uri.Host);
                    message.AppendLine($"- Success: {string.Join(", ", hostEntry.AddressList.Select(a => a.ToString()))}");
                } catch (Exception dnsEx) {
                    message.AppendLine($"- Failed: {dnsEx.Message}");
                    // IMPORTANT: Explicitly fail the test if DNS resolution fails
                    throw new Exception($"DNS resolution failed for endpoint host '{uri.Host}'. The host cannot be resolved: {dnsEx.Message}");
                }
                
                // Also check the problematic domain
                var problematicHost = "povicoai.openai.azure.com";
                message.AppendLine();
                message.AppendLine($"DNS Resolution for {problematicHost}:");
                try {
                    var hostEntry = System.Net.Dns.GetHostEntry(problematicHost);
                    message.AppendLine($"- Success: {string.Join(", ", hostEntry.AddressList.Select(a => a.ToString()))}");
                    // If by some chance this succeeds, add a warning but don't fail
                    message.AppendLine("⚠️ Warning: The problematic endpoint 'povicoai.openai.azure.com' resolves to a valid IP address!");
                } catch (Exception dnsEx) {
                    message.AppendLine($"- Failed: {dnsEx.Message}");
                    // This is expected - the problematic endpoint shouldn't resolve
                }
            } catch (Exception ex) {
                message.AppendLine($"URI parsing failed: {ex.Message}");
                throw new Exception($"Failed to parse endpoint URI: {ex.Message}");
            }

            check.SetSuccess(message.ToString());
            Logger.LogInformation("OpenAI configuration details test passed");
        }
        catch (Exception ex)
        {
            check.SetFailure(ex.Message);
            Logger.LogError(ex, "OpenAI configuration details test failed");
        }
    }

    private class DiagnosticCheck
    {
        public string Name { get; set; } = "";
        public bool IsChecked { get; private set; }
        public bool IsSuccess { get; private set; }
        public string Message { get; private set; } = "";

        public void Reset()
        {
            IsChecked = false;
            IsSuccess = false;
            Message = "";
        }

        public void SetSuccess(string message)
        {
            IsChecked = true;
            IsSuccess = true;
            Message = message;
        }

        public void SetFailure(string message)
        {
            IsChecked = true;
            IsSuccess = false;
            Message = message;
        }
    }
}
