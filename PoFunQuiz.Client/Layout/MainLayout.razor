@inherits LayoutComponentBase
@using Radzen
@using Radzen.Blazor

<RadzenDialog />
<RadzenNotification />
<RadzenContextMenu />
<RadzenTooltip />

<RadzenLayout>
    <RadzenHeader>
        <div class="rz-display-flex rz-justify-content-space-between rz-align-items-center rz-px-4">
            <h3 class="rz-mb-0">PoFunQuiz</h3>
            <nav class="header-nav">
                <a href="/" class="nav-link">Home</a>
                <a href="/leaderboard" class="nav-link">Leaderboard</a>
                <a href="/diag" class="nav-link">Diagnostics</a>
            </nav>
        </div>
    </RadzenHeader>
    <RadzenBody>
        <div class="rz-p-4">
            @Body
        </div>
    </RadzenBody>
    <RadzenFooter>
        <div class="rz-text-align-center rz-p-2">
            <small>PoFunQuiz - Challenge Your Knowledge!</small>
        </div>
    </RadzenFooter>
</RadzenLayout>

<style>
    .header-nav {
        display: flex;
        gap: 1rem;
    }
    
    .nav-link {
        color: white;
        text-decoration: none;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        transition: background-color 0.2s;
    }
    
    .nav-link:hover {
        background-color: rgba(255, 255, 255, 0.1);
        color: white;
        text-decoration: none;
    }
    
    @@media (max-width: 768px) {
        .header-nav {
            gap: 0.5rem;
        }
        
        .nav-link {
            padding: 0.25rem 0.5rem;
            font-size: 0.9rem;
        }
    }
</style>
